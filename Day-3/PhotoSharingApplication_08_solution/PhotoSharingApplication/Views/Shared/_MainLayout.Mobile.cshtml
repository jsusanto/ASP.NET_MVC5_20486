
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link type="text/css" rel="stylesheet" href="~/content/PhotoSharingStyles.css" />
</head>
<body>
    <div>
        <h1 class="site-page-title">
            Adventure Works <br />
            Photo Sharing
        </h1>
        <h2>Mobile Site</h2>
        <div class="clear-floats"></div>

        <div id="topmenu">
            <!--
        Add a DIV element to the page with the id topmenu. Within this element,
        render the main menu for the page by using the following information:
        Helper: Html.MvcSiteMap()
        Method: Menu()
        Start from the current node: False
        Starting node in the child level: True
        Show the starting node: True
        -->
            @Html.MvcSiteMap().Menu(false, true, true)
        </div>
        <div id="breadcrumb">
            @Html.MvcSiteMap().SiteMapPath()
        </div>
        <div>
            @RenderBody()
        </div>
    </div>
</body>
</html>
